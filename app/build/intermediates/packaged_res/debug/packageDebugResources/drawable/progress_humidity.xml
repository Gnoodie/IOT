<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background của thanh tiến trình -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Xám nhạt cho nền -->
            <corners android:radius="8dp" /> <!-- Bo góc 8dp -->
        </shape>
    </item>
    <!-- Thanh tiến trình chính -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#B3E5FC"
                android:endColor="#0288D1" 
                android:angle="0" /> <!-- Gradient ngang -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
    <!-- Lớp phủ gợi sóng nước (hiệu ứng thẩm mỹ) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#E1F5FE"
                android:endColor="#4FC3F7"
                android:angle="45" /> <!-- Gradient chéo nhẹ -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>